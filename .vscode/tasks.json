{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run dev server",
      "type": "npm",
      "script": "dev",
      "problemMatcher": ["$vite"],
      "group": {
        "isDefault": true
      }
    },
    {
      "label": "Run dev server with staging API (dev.impresso-project.ch)",
      "type": "npm",
      "script": "dev-staging",
      "problemMatcher": ["$vite"],
      "group": {
        "isDefault": false
      }
    },
    {
      "label": "Generate Types",
      "type": "npm",
      "script": "generate-types",
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
