{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.vue", ".storybook/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // remove when all legacy codebase is fixed:
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true
  }
}
